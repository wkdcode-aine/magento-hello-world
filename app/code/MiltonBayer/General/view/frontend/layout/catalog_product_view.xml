<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.options">
           <action method='setTemplate'>
               <argument name='template' xsi:type='string'>MiltonBayer_General::product/view/options.phtml</argument>
           </action>

           <block class="MiltonBayer\General\Block\Product\View\Options\Type\Colours" name="product.info.options.colours" as="colours" template="MiltonBayer_General::product/view/options/type/colours.phtml"/>
        </referenceBlock>
        <referenceBlock name="product.info.options.select">
           <action method='setTemplate'>
               <argument name='template' xsi:type='string'>MiltonBayer_General::product/view/options/type/select.phtml</argument>
           </action>
        </referenceBlock>


        <referenceContainer name="product.info.social" remove="true" />
        <referenceContainer name="product.info.stock.sku" remove="true" />

        <referenceContainer name="content">
            <container name="product.info.short_desc" htmlTag="div" htmlClass="product short_desc media" after="product.info.media" />
        </referenceContainer>
        <move element="product.info.overview" destination="product.info.short_desc" />
    </body>
</page>
