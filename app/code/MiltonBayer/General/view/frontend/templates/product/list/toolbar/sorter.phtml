<?php
/**
 * Product list toolbar
 *
 * @var $block \MiltonBayer\General\Block\Product\ProductList\Toolbar
 */
use MiltonBayer\General\Model\Product\ProductList\Toolbar;

$selected = 'selected="selected"';
$sort_values = $block->getAvailableOrderAndDirections();
$default_value = $block->getDefaultOrderAndDirectionValue();

?>
<div class="toolbar-sorter sorter">
    <label class="sorter-label" for="sorter"><?= __('Sort by:') ?></label>
    <select class="js-sort-select sorter-options" data-default="<?= $default_value; ?>">
        <?php
            foreach ($sort_values as $_key => $_order) {
                echo '<option value="' . $_key . '" ' . ($block->isOrderDirectionCurrent($_key) ? $selected : '') . '>';
                    echo $block->escapeHtml(__($_order));
                echo '</option>';
            }
        ?>
    </select>
</div>
