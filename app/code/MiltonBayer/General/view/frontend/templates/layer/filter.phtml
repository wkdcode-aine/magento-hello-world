?>
<ol class="items js-items <?= $is_price ? 'js-price' : ''; ?>" data-param="<?= $param; ?>">
    <?php foreach ($filterItems as $index => $filterItem): ?>
        <?php $value = $filterItem->getValue(); ?>
        <li class="item js-item <?= empty($selected) || !in_array($value, $selected) ? 'active js-active' : '' ?>" data-index="<?= $index; ?>" data-value="<?= $value; ?>">
            <a href="<?= $block->escapeUrl($filterItem->getUrl()) ?>">
                <?php $value = $filterItem->getValue(); ?>
                <?= /* @escapeNotVerified */ $filterItem->getLabel() ?>
            </a>
        </li>
    <?php endforeach ?>
</ol>


