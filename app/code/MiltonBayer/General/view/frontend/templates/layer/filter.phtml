/**
 * Template for filter items block
 *
 * @var $block \Magento\LayeredNavigation\Block\Navigation\FilterRenderer
 */
echo '<ol class="items js-items ' . ($is_price ? 'js-price' : '') . '" data-param="' . $param . '">';
    foreach ($filterItems as $index => $filterItem):
        $value = $filterItem->getValue();
        echo '<li class="item js-item ' . (empty($selected) || !in_array($value, $selected) ? 'active js-active' : '') . '" data-index="' . $index . '" data-value="' . $value . '">';
            if( $designadoor || $is_price ):
                echo '<div data-href="' . $block->escapeUrl($filterItem->getUrl()) . '">';
                    echo $filterItem->getLabel();
                echo '</div>';
            else:
                echo '<a href="' . $block->escapeUrl($filterItem->getUrl()) . '">';
                    echo $filterItem->getLabel();
                echo '</a>';
            endif;
        echo '</li>';
    endforeach;
echo '</ol>';
